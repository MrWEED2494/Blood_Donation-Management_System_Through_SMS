@using System.Web.Mvc.Html
@using BloodDonor_01.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMy.cshtml";

}

@{
    var donor = Session["user"] as DonorViewModel;
}

@if (donor != null)
{
    <h3>Welcome @(donor.FirstName + " " + donor.MiddleName + " " + donor.LastName)</h3>
    <hr /> 
    <hr /> 
    using (Html.BeginForm())
     {
        @Html.AntiForgeryToken()

         <form>
             <fieldset>
                 <legend>Profile</legend>
                 <div class="form-horizontal">

                     <div class="form-group">
                         @Html.Label(donor.Username, "Username", new { @class = "control-label col-md-2" })
                         <div class="col-sm-10">
                             @Html.Label(donor.Username, donor.Username, new { @class = "label label-default" })
                         </div>
                     </div>
                     <div class="form-group">
                         @Html.Label(donor.FirstName, "Name", new { @class = "control-label col-md-2" })
                         <div class="col-sm-10">
                             @Html.Label(donor.FirstName, donor.FirstName + " " + donor.MiddleName + " " + donor.LastName, new { @class = "label label-default" })
                         </div>
                     </div>

                     <div class="form-group">
                         @Html.Label(donor.BloodGroup, "Blood Group", new { @class = "control-label col-md-2" })
                         <div class="col-sm-10">
                             @Html.Label(donor.BloodGroup, donor.BloodGroup, new { @class = "label label-default" })
                         </div>
                     </div>

                     <div class="form-group">
                         @Html.Label(donor.Area, "Area", new { @class = "control-label col-md-2" })
                         <div class="col-sm-10">
                             @Html.Label(donor.Area, donor.Area, new { @class = "label label-default" })
                         </div>
                     </div>

                     <div class="form-group">
                         @Html.Label("NumberOfDonation", "Donation Number", new { @class = "control-label col-md-2" })
                         <div class="col-sm-10">
                             @Html.Label("NumberOfDonation", donor.NumberOfDonation.ToString(), new { @class = "label label-default" })
                         </div>
                     </div>

                     <div class="form-group">
                         @Html.Label(donor.LastDonationDate, "Last Donation", new { @class = "control-label col-md-2" })
                         <div class="col-sm-10">
                             @Html.Label(donor.LastDonationDate, donor.LastDonationDate, new { @class = "label label-default" })
                         </div>
                     </div>
                 </div>
             </fieldset>
    </form>
     }
     <hr /> 
    <hr /> 
    <div><p style="color: red; font-size: 20px">After editing profile if you don't see updated info, don't get panic</p>
        <p style="color: red; font-size: 20px">The updated info will appear in next log in. :) </p>
    </div>

}
@section scripts {
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}